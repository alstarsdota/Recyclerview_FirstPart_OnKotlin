<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/mainLayout"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleimage"
        android:layout_width="50dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/gradient1"
        android:layout_marginTop="7dp"
        android:src="@drawable/lal"
        android:layout_height="50dp"/>

    <RelativeLayout
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/circleimage"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/dots"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_more_horiz_black_24dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="15dp"
            android:text="Sport-News"
            android:id="@+id/textV"
            />


    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@id/text"
        android:layout_marginTop="-25dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="67dp"
        android:textSize="10dp"
        android:text="Advertisment"
        android:id="@+id/textV2"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myImageVIEW"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/like"
            android:layout_width="33dp"
            android:onClick="toastClick"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/like" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/comment1"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/send"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageSave"
        android:layout_width="36dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/myImageVIEW"
        android:layout_marginTop="210dp"
        android:src="@drawable/save" />
    <ImageView
        android:id="@+id/myImageVIEW"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/circleimage" />
    <TextView
        android:id="@+id/description"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/myImageVIEW"
        android:layout_marginTop="60dp" />
    <TextView
        android:id="@+id/nrav"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"
        android:text="Liked: 50"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/myImageVIEW"
        android:layout_marginTop="40dp" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/comment"
        android:layout_width="25dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/description"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/lal"
        android:layout_height="30dp"/>
    <TextView
        android:id="@+id/commentText"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:text="comments..."
        android:layout_marginTop="10dp"
        android:layout_below="@id/description"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/comment"
        />
    <TextView
        android:id="@+id/Minute"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="13dp"
        android:textSize="9dp"
        android:text="49 minutes ago"
        android:layout_below="@id/comment"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        />
</RelativeLayout>